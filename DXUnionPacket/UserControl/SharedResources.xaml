	<uc:UIString  x:Key="menu_view_reset">
		<uc:UICultureString UICulture="en-US" Value="Reset" />
		<uc:UICultureString UICulture="de-DE" Value="Reset"/>
	</uc:UIString>
	
	<uc:UIString  x:Key="menu_settings">
		<uc:UICultureString UICulture="en-US" Value="Settings" />
