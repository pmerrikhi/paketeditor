	</uc:UIString>
	<uc:UIString  x:Key="panel_sample">
		<uc:UICultureString UICulture="en-US" Value="Sample" />
		<uc:UICultureString UICulture="de-DE" Value="Muster"/>
	</uc:UIString>
	<uc:UIString  x:Key="panel_bas">
		<uc:UICultureString UICulture="en-US" Value="BAS" />
		<uc:UICultureString UICulture="de-DE" Value="BAS"/>
	</uc:UIString>
	
	<uc:UIString  x:Key="button_browse">
		<uc:UICultureString UICulture="en-US" Value="Open" />
